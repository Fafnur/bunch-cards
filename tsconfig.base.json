{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bunch/card/common": ["libs/card/common/src/index.ts"],
      "@bunch/core/environments": ["libs/core/environments/src/index.ts"],
      "@bunch/core/navigation": ["libs/core/navigation/src/index.ts"],
      "@bunch/core/platform": ["libs/core/platform/src/index.ts"],
      "@bunch/core/store/root": ["libs/core/store/root/src/index.ts"],
      "@bunch/core/testing": ["libs/core/testing/src/index.ts"],
      "@bunch/core/utils/destroy": ["libs/core/utils/destroy/src/index.ts"],
      "@bunch/core/utils/operators": ["libs/core/utils/operators/src/index.ts"],
      "@bunch/core/utils/types": ["libs/core/utils/types/src/index.ts"],
      "@bunch/web/core/hammer": ["libs/web/core/hammer/src/index.ts"],
      "@bunch/web/core/meta": ["libs/web/core/meta/src/index.ts"],
      "@bunch/web/core/storage": ["libs/web/core/storage/src/index.ts"],
      "@bunch/web/core/window": ["libs/web/core/window/src/index.ts"],
      "@bunch/web/localization": ["libs/web/localization/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
